<div class="signup">
    <form class="form" method="POST" action="/admin/signup">
      <h1 class="heading">SIGN UP <br><span style="font-size: 1rem;">(As Admin)</span></h1>
      <input
        type="text"
        placeholder="Name"
        name="name"
        required
      />
      <input
        type="email"
        placeholder="email"
        name="email"
        required
      />
      <input
        type="password"
        placeholder="password"
        name="password"
        required
      />
      <input
        type="number"
        placeholder="Phone Number"
        name="phone"
        required
      />
      <button class="submit-btn" name="submit">SIGN UP</button>
    </form>  
</div>